{{#if overlayVisible}}
<div class="overlay-background"></div>
{{/if}}

{{#if customOverlay}}
<div id="overlay" class="overlay {{customOverlay.className}}">
	{{{customOverlay.content}}}
</div>
{{/if}}

{{#if helpVisible}}
<div class="overlay frame help-overlay b2">
	<h1 class="b5">{{_controls}}</h1>
	<p>
		{{_helpline1}}<br/>
		{{_helpline2}}
	</p>
	<p>
		{{_helpline3}}<br/>
		{{_helpline4}}
	</p>
	<p>
		{{_helpline5}}<br/>
		{{_helpline6}}
	</p>


	<h2 class="b3">{{_specialmatches}}</h2>
	<div class="matchable-container b5">
		<img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" />
		=&gt;
		<div class="matchable" style="background-image: url('{{matchable1Src}}');">
			<img class="matchable" src="{{verticalSrc}}" />
		</div>
	</div>		

	<p>
		{{_clearsinaline}}
	</p>
	
	<div class="matchable-container b5">
		<div style="text-align: left; display: inline-block">
			<img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><br/>
			<img class="matchable" src="{{matchable1Src}}" style="margin-left: 36px" /> &nbsp; =&gt; &nbsp; <div class="matchable" style="background-image: url('{{matchable1Src}}');">
			<img class="matchable" src="{{areaclearSrc}}" />
		</div><br/>
			<img class="matchable" src="{{matchable1Src}}" style="margin-left: 36px" />
			
		</div>
	</div>		

	<p>
		{{_clearsarea}}
	</p>

	<div class="matchable-container b5">
		<img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" /><img class="matchable" src="{{matchable1Src}}" />
		=&gt;
		<img class="matchable" src="{{colorClearSrc}}" />
	</div>		
	<p>
		{{_clearsanimal}}
	</p>
	
	
	<p>
		<a href="http://emojione.com" target="_blank" class="emojione">Animal Art provided by Emoji One</a>
	</p>
	
	<img class="close-button" src="{{closeSrc}}" />
</div>
{{/if}}

{{#if connectionErrorVisible}}
<div id="connection-error">
	<div class="details b3">{{_connecting}}</div>
	<div class="details b3">{{_connectingrefresh}}</div>
</div>
{{/if}}
