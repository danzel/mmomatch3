<div class="bottom-corner-buttons">
	<div class="feedback-button">
		<svg><text>Feedback</text></svg>
	</div><div class="help-button">
		<svg><text>Help</text></svg>
	</div>
</div>

{{#if overlayVisible}}
<div class="overlay-background"></div>
{{/if}}

{{#if helpVisible}}
<div class="overlay help-overlay">
	<p><svg><text class="heading">Help</text></svg></p>
	
	<p>
		<svg><text class="details">
		Click and drag animals to match them.
		</text></svg> 
		<svg><text class="details">
		You can only drag ones that will make a match.
		</text></svg>
	</p>
	<p>
		<svg><text class="details">
		Zoom in and out using the mouse wheel.
		</text></svg> 
		<svg><text class="details">
		Drag with the middle mouse button to move around.
		</text></svg>
	</p>
	
	<img class="close-button" src="/img/ui/close.svg" />
</div>
{{/if}}

{{#if feedbackVisible}}
<div class="overlay feedback-overlay">
	<svg class="loading"><text>Loading...</text></svg>
	<iframe src="https://docs.google.com/forms/d/1Oe6QG2DLKTS8yg25mxoMzNIHKozqy8HQ8Dpv15uvd_8/viewform?embedded=true" width="400" height="600" frameborder="0" marginheight="0" marginwidth="0" style="position: relative">Loading...</iframe>
	<img class="close-button" src="/img/ui/close.svg" />
</div>
{{/if}}

{{#if customOverlayVisible}}
<div class="overlay {{customOverlayClass}}">
	{{{customOverlayContent}}}
</div>
{{/if}}